<!-- jQuery for counter animation -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Counter Animation
    $('.counter').each(function() {
        var $this = $(this);
        var countTo = $this.text();
        
        $({ countNum: 0 }).animate({
            countNum: countTo
        }, {
            duration: 2000,
            easing: 'linear',
            step: function() {
                $this.text(Math.floor(this.countNum) + "+");
            },
            complete: function() {
                $this.text(this.countNum + "+");
            }
        });
    });
</script>

