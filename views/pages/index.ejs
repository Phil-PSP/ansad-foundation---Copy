<style>
.partners-section {
    background: #f8f9fa;
    overflow: hidden;
    padding: 20px 0;
}

.partners-slider {
    position: relative;
    overflow: hidden;
    padding: 12px 0;
}

.partners-track {
    display: flex;
    animation: scroll 30s linear infinite;
}

.partner-item {
    flex: 0 0 auto;
    padding: 0 18px;
    transition: transform 0.3s ease;
}

.partner-item:hover {
    transform: scale(1.1);
}

.partner-item img {
    max-height: 100px;
    width: auto;
    filter: grayscale(100%);
    transition: filter 0.3s ease;
}

.partner-item:hover img {
    filter: grayscale(0%);
}

.partners-section h2 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
}

@keyframes scroll {
    0% {
        transform: translateX(0);
    }
    100% {
        transform: translateX(-50%);
    }
}

.partners-slider:hover .partners-track {
    animation-play-state: paused;
}
</style>

