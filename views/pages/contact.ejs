<%- include('../partials/header') %>

<!-- Contact Hero Section -->
<div class="contact-hero">
    <div class="container">
        <div class="row py-5">
            <div class="col-12 text-center text-white">
                <h1 class="display-4 mb-3">Contact Us</h1>
                <p class="lead">Get in touch with us today</p>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <!-- Contact Form -->
        <div class="col-lg-6 mb-4">
            <div class="contact-form-card p-4">
                <h3 class="mb-4">Send us a Message</h3>
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Your Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Your Email" required>
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="subject" placeholder="Subject" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" rows="4" placeholder="Your Message" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>
        </div>

        <!-- Contact Info and Map -->
        <div class="col-lg-6">
            <div class="contact-info-card p-4 mb-4">
                <h3 class="mb-4">Contact Information</h3>
                <div class="contact-info">
                    <div class="mb-3">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>KAAF UNIVERSITY<br>GOMOA FETTEH<br>P.O.BOX WU 177</span>
                    </div>
                    <div class="mb-3">
                        <i class="fas fa-phone"></i>
                        <span>+233 24 230 2852</span>
                    </div>
                    <div class="mb-3">
                        <i class="fas fa-envelope"></i>
                        <span>info@nasdafoundation.org</span>
                    </div>
                </div>
            </div>

            <!-- Google Map -->
            <div class="map-container">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3970.9876543210987!2d-0.4931837252168987!3d5.512562397112522!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xfdf9c7ebf84b8f9%3A0x6e902c08b6c3c635!2sKAAF%20University%20College%20Main%20Campus!5e0!3m2!1sen!2sgh!4v1709834899033!5m2!1sen!2sgh"
                    width="100%"
                    height="400"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
